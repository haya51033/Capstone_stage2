<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMyResHotelImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/hotel1"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/hotel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ivMyResHotelCheck_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/rateValue"
                android:textSize="14sp"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:background="#7000"
                android:textColor="#ffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ivMyResHotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp"
                    android:padding="15dp"
                    android:background="#EEEEEEEE"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/ivMyResHotelCity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"
                    android:background="#EEEEEEEE"
                    android:drawableEnd="@android:drawable/ic_media_play"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ffff"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>